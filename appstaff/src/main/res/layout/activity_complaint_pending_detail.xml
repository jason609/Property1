<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg"
              android:orientation="vertical"
              tools:context="com.ctrl.android.property.jason.ui.complaint.MyComplaintPretreatmentActivity">


    <include layout="@layout/toolbar_common"
             android:layout_width="match_parent"
             android:layout_height="@dimen/header_height"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <!-- <TextView
                    android:id="@+id/tv_my_repairs_aftertreament_progress"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/LargeTextSize"/>-->


                <TextView
                    android:id="@+id/tv_repairs_room"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textSize="@dimen/BasicTextSize"
                    />

                <TextView
                    android:id="@+id/tv_my_repairs_aftertreament_time"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>


                <TextView
                    android:id="@+id/tv_my_repairs_aftertreament_type"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="投诉内容："
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/BasicTextSize"/>

                <TextView
                    android:id="@+id/tv_my_repairs_aftertreament_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:inputType="textMultiLine"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_baoxiu_image"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实景照片"
                    android:textSize="@dimen/LargeTextSize"
                    android:textColor="@color/text_gray"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv01_my_repairs_aftertreament"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv02_my_repairs_aftertreament"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:id="@+id/iv03_my_repairs_aftertreament"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:layout_weight="1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_gray"
                        android:layout_gravity="center"
                        android:text="执行人:"/>

                    <TextView
                        android:id="@+id/tv_excute_name"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:minWidth="100dp"
                        android:padding="5dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edit_shap"

                        />

                    <ImageView
                        android:id="@+id/iv_excute_add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/add_man_icon"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="下达"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/text_white"
                    android:background="@drawable/orage_bg"
                    android:gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
